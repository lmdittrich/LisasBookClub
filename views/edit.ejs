<%- include('./partials/header.ejs')%>
<main>
    <div class="container-content">
        <form method = "POST" enctype="multipart/form-data" action = "/events/<%= event._id%>?_method=PUT" >
            <div>
                <label for="category">Category: </label>
                <select name="category" id="category" required>
                    <option value=""><%= event.category %></option>
                    <option value="Reading">Reading</option>
                    <option value="Discussion">Discussion</option>
                    <option value="Movie">Movie</option>
                    <option value="Bookstore">Bookstore</option>
                    <option value="Signing">Book Signing</option>
                    <option value="Other">Other</option>
                </select>
            </div>
    
            <div>
                <label for="title">Title: </label>
                <input type="text" name="title" id="title" placeholder="Title" value = "<%= event.title %>"required>
            </div>
    
            <div>
                <label for="details">Details: </label>
                <textarea name="details" id="details" placeholder="Description" required><%= event.details %></textarea>
            </div>
                
    
            <div>
                <label for="location">Location: </label>
                <input type="text" name="location" id="location" placeholder="Location" value = "<%= event.location %>" required>
    
            </div>
            
            <div>
                <label for="start">Start: </label>
                <input type="datetime-local" name="start" id="start" value = "<%= start %>" required>
    
            </div>
    
            <div>
                <label for="end">End: </label>
                <input type="datetime-local" name="end" id="end" value = "<%= end %>" required>
            </div>

            <div>
                <label for="image">File upload: </label>
                <input type="file" name="image" id="image" required>
            </div>
    
            <div>
                <input type="submit" name="submit" id ="submit" value="Submit">
            </div>
    </form>
    </div>
</main>
<%- include('./partials/footer.ejs')%>